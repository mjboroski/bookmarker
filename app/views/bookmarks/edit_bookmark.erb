<h2> Edit Bookmark </h2>

<form method="post" action="/bookmarks/<%=@bookmark.id%>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <input type="text" name="title" value="<%= @bookmark.title %>">
  <input type="text" name="link" value="<%= @bookmark.link %>">
  <input type="text" name="category" value="<%= @bookmark.category %>">
  <input type="submit" value="submit">
</form>
